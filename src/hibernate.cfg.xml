<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <property name="dialect">org.hibernate.dialect.Oracle10gDialect</property>
        <property name="connection.url">jdbc:oracle:thin:@localhost:1521:xe</property>
        <property name="connection.username">oop</property>
        <property name="connection.password">oop</property>
        <property name="connection.driver_class">oracle.jdbc.driver.OracleDriver</property>

        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.show_sql">true</property>


        <mapping class="Fuel_Type"/>
        <mapping class="Car_Brand"/>
        <mapping class="Car_Model"/>
        <mapping class="Car_Type"/>
        <mapping class="Car_Class"/>
        <mapping class="Cars"/>
        <mapping class="Clients"/>
        <mapping class="Risk_Assessment"/>
        <mapping class="User_Type"/>
        <mapping class="User"/>
        <mapping class="Rent_A_Car"/>
        <mapping class="Car_Condition"/>

    </session-factory>

</hibernate-configuration>